<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="1"
        android:id="@+id/iv_xlvshow_image"
        android:src="@mipmap/banner"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_80" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20">

            <TextView
                android:text="玉兰油美白补水面膜"
                android:layout_toRightOf="@id/iv_xlvshow_image"
                android:id="@+id/tv_xlvname_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20">

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20">

                <ImageView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/iv_xlvmory_view"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/the_amount_of"

                    />
                <TextView
                    android:text="10.00"
                    android:layout_toRightOf="@id/iv_xlvshow_image"
                    android:id="@+id/tv_xlvmory_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20">

                <ImageView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/iv_xlvluliang_view"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/the_size_of_the"

                    />
                <TextView
                    android:text="10.00"
                    android:layout_toRightOf="@id/iv_xlvshow_image"
                    android:id="@+id/tv_xlvliuiang_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20">

                <ImageView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/iv_xlvtime_view"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@mipmap/time"

                    />
                <TextView
                    android:text="10.00"
                    android:layout_toRightOf="@id/iv_xlvshow_image"
                    android:id="@+id/tv_xlvadtime_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:weightSum="4"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20">

            <TextView
                android:textSize="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="有效期至:"
                android:layout_toRightOf="@id/iv_xlvshow_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content" />

            <TextView

                android:textSize="@dimen/dp_9"
                android:text="2015.05.05"
                android:layout_toRightOf="@id/iv_xlvshow_image"
                android:id="@+id/tv_time_show"
                android:layout_width="@dimen/dp_49"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="@dimen/dp_14"
                android:id="@+id/iv_paycont_view"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@mipmap/play_comments_min_icon"

                />

            <TextView

                android:textSize="@dimen/dp_9"
                android:text="289.7万"
                android:layout_toRightOf="@id/iv_xlvshow_image"
                android:id="@+id/tv_play_show"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_weight="1"
        android:id="@+id/iv_xiazai_image"
        android:src="@mipmap/xiazai_pigpang_"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30" />






</LinearLayout>

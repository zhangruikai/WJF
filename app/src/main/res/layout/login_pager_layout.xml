<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background"
    android:orientation="vertical"
    android:weightSum="3">

    <include
        android:id="@+id/ic_main_title"
        layout="@layout/activity_main_title" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_pager" />


    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@color/white"
        >

        <ImageView
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/login_name_page" />
        <TextView

            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录账户："
            android:textSize="@dimen/dp_16" />


        <EditText
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/tv_login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="小毛驴/手机/邮箱" />


    </LinearLayout>

    <TextView
        android:background="@color/all_background_title"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_1" />



    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        >

        <ImageView
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/login_password" />
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的密码："
            android:textSize="@dimen/dp_16" />


        <EditText
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white"
            android:id="@+id/tv_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/bt_zhucenmain_login"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_17"
            android:text="注册"
            android:background="@mipmap/button_login_zhuce_bind"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/bt_logmain_login"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_17"
            android:text="立即登录"
            android:background="@mipmap/button_login_denglu"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="60dp" />

    </LinearLayout>



    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_login_wangpassword"
            android:textColor="@color/tv_login_password"
            android:layout_alignParentRight="true"
            android:text="忘记密码？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





    </RelativeLayout>






</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/ic_main_title"
        layout="@layout/activity_main_title" />

    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@color/white"
        >

        <ImageView
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/login_name_page" />

        <EditText
            android:textSize="@dimen/dp_20"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/et_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="会员名" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        >

        <ImageView
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/login_password" />

        <EditText
            android:textSize="@dimen/dp_20"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        >

        <ImageView
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/register_dui_vip" />

        <EditText
            android:textSize="@dimen/dp_20"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/et_register_passwore01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认密码" />


    </LinearLayout>


    <Button
        android:id="@+id/bt_register_jump"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/white"
        android:text="提交"
        android:background="@color/all_background_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>
